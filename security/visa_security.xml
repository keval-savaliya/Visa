<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

        <record model="ir.module.category" id="module_category_visa_client">
            <field name="description">Helps you handle your accounting needs, if you are not an accountant, we suggest you to install only the Invoicing.</field>
            <field name="name">Client</field>
            <field name="sequence">7</field>
        </record>

        <record id="group_visa_client" model="res.groups">
            <field name="name">Client Group</field>
            <field name="category_id" ref="Visa.module_category_visa_client"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <record id="visa_client_record_rule" model="ir.rule">
            <field name="name">visa client rule</field>
            <field name="model_id" ref="model_visa_client"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('Visa.group_visa_client'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="active" eval="False"/> 
        </record>


        <record id="visa_client_record" model="ir.rule">
            <field name="name">visa type rule</field>
            <field name="model_id" ref="model_visa_type"/>
            <field name="domain_force">[('name','=','Travel')]</field>
            <field name="groups" eval="[(4, ref('Visa.group_visa_client'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="active" eval="False"/> 
        </record>

   </data>
</odoo>