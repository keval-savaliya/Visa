	<record id="visa_inherit_tree" model="ir.ui.view">
		<field name="name">visa.inherit.tree</field>
		<field name="model">parent.model</field>
		<field name="arch" type="xml">
			<tree>
				<field name="parent" />
				<field name="child"	/>
				<field name="is_rich"/>
			</tree>
		</field>
	</record>

	<record id="visa_inherit_search" model="ir.ui.view">
		<field name="name">visa.inherit.search</field>
		<field name="model">parent.model</field>
		<field name="arch" type="xml">
			<search>
				<group expand="0" name="Group By">

					<filter
						name="group_by_rich"
						string="rich"
						context="{'group_by':'is_rich'}"
						/>

				</group>
			</search>
		</field>
	</record>

	<record id="visa_inherit_action" model="ir.actions.act_window">
		<field name="name">Inherit</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">parent.model</field>
		<field name="view_mode">tree,kanban,form</field>
		<field name="context">{'default_is_rich':False , 'search_default_group_by_rich':1}</field>
		<field name="help" type="html">
			<p> It is working ok.</p>
		</field>
	</record> 

	<menuitem 	id="visa_inheritance_root"
			name="Inheritance"
			parent="visa_root"
			sequence="12"/>

	<menuitem 	id="visa_inherit_root"
			name="Inherit"
			parent="visa_inheritance_root"
			action="visa_inherit_action"
			sequence="12"/>

