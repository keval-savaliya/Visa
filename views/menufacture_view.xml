<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="inherited_manufacture_view_form">
		<field name="name">inherited.manufacture.view.form.inherit.test</field>
		<field name="model">mrp.production</field>
		<field name='inherit_id' ref='mrp.mrp_production_form_view' />
		<field name="arch" type="xml">
		  	<xpath expr="/form/sheet/notebook/page/field[@name='move_raw_ids']/tree/field[@name='product_id']" position="before">
			    <field name="remark" />
			</xpath>
		</field>
	</record>


	<record model="ir.ui.view" id="inherited_sale_quatation_view_form">
		<field name="name">inherited.sale.quatation.view.form.inherit.test</field>
		<field name="model">sale.order</field>
		<field name='inherit_id' ref='sale.view_order_form' />
		<field name="arch" type="xml">
		  	<xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
			    <field name="price" />
			</xpath>
		</field>
	</record>

	<record model="ir.ui.view" id="inherited_invoice_view_form">
		<field name="name">inherited.invoice.view.form.inherit.test</field>
		<field name="model">account.move</field>
		<field name='inherit_id' ref='account.view_move_form' />
		<field name="arch" type="xml">
		  	<xpath expr="/form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="after">
			    <field name="price2" />
			</xpath>
		</field>
	</record>


</odoo>